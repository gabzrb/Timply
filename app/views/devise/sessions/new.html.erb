<div class="banner-connexion" style="background-image:
  linear-gradient(to right top, #1460d1, #2173db, #3485e3, #4997eb, #60a9f1);">
  <div class="card_connexion">
    <div class="card_connexion_content">
      <h2 style="color: #518CE4">Se connecter</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="col-xs-12 col-md-12">
          <%= f.input :email,
          required: false,
          autofocus: true,
          input_html: { autocomplete: "email" } %>
        </div>
        <div class="col-xs-12 col-md-12">
          <%= f.input :password,
          required: false,
          label: "Mot de passe",
          input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Se connecter", class: "btn-inscription" %>
      </div>
      <div class="marginsupprimerblock">
        <%= link_to "Nouveau ? Inscrivez-vous", new_user_registration_path %>
        <%= link_to "Mot de passe oubliÃ© ?",  new_user_password_path %>
      </div>
    </div>
    <% end %>
  </div>
</div>
