<div class="banner-inscription" style="background-image:
 url(<%= image_path 'plein.png' %>);">


    <div class="card_inscription">
       <h2 style="color: #518CE4 "><strong>Inscription</strong></h2>
   <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-row inputinscri">

    <div class="col-xs-12 col-md-6">
    <%= f.input :prenom, label: "Prénom"%>
      </div>

    <div class="col-xs-12 col-md-6">
    <%= f.input :name, label: "Nom"%>
      </div>

       <div class="col-xs-12">
           <%= f.input :email,
                required: true,
                autofocus: true ,
                 placeholder: "mestimbres@gmail.com",
                input_html: { autocomplete: "email" }%>
      </div>


        <div class="col-xs-12">
            <%= f.input :password,
                required: true,
                label: "Mot de passe",
                placeholder: "6 caractères minimum",

                input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="col-xs-12">
          <%= f.input :password_confirmation,
                      label: "Confirmation du mot de passe",
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

          <div class="col-xs-12">
          <%= f.input :entreprise %>
           </div>
           <div class="col-xs-12">
             <%= f.input :address, label: "Adresse" %>
           </div>

            <div class="col-xs-12 col-md-6">
             <%= f.input :codepostal, label: "Code Postal" %>
           </div>

           <div class="col-xs-12 col-md-6">
             <%= f.input :ville, label: "Ville" %>
           </div>



          <div class="col-xs-12">
          <%= f.input :siret %>
          </div>
        </div>
        <div class="form-actions">
      <%= f.button :submit, "S'inscrire", class: "btn-inscription"%>
    </div>
        <div class="confirm-data">
            <%= f.input :comfirm_data, label: false, as: :boolean, boolean_style: :inline  %>
              <label for="resource_confirm_data">J'accepte les  <%= link_to "Conditions d'Utilisations", conditionsgenerales_path %></label>
       </div>
      <div class="marginsupprimer">

    <strong> <%= render "devise/shared/links" %> </strong>
  </div>
  </div>


<% end %>

</div>





