<div class="banner-order" style="background: linear-gradient(#0052D4, #4364F7,#6FB1FC);">
<div class="container text-center">
   <h2><strong>S'inscrire</strong></h2>
 <div class="col-xs-12 col-sm-6 col-md-6">
    <div class="petitecard">


   <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-row">

    <%= f.input :email,
                required: true,
                autofocus: true ,
                 placeholder: "jepaiemestimbres@gmail.com",
                input_html: { autocomplete: "email" }%>


    <%= f.input :name %>
    <%= f.input :password,
                required: true,
                label: "Mot de passe",
                label: false,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: "Confirmation du mot de passe",
                required: true,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :entreprise %>
    <%= f.input :address, label: "Adresse" %>
    <%= f.input :siret %>
  </div>
    <div class="form-actions">
      <%= f.button :submit, "S'inscrire", class: "btn-cta"%>
    </div>

<% end %>
</div>
</div>
</div>


<!-- Modal -->

<%= render "devise/shared/links" %>
</div>
