
<div class="banner-connexion" style="background-image:
  url(<%= image_path 'plein.png' %>);">
   <div class="card_mdpf">
      <h2 style="color: #518CE4"> Mot de passe oublié ? </h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Envoyer le mot de passe", class: "btn-inscription" %>
        </div>
      <% end %>
      </div>
     <div class="blanco">
       <%= link_to "Déjà inscrit ? Connectez-vous", new_registration_path(resource_name) %>
       </div>
  </div>
