<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <% @instance_user = User.new %>
    <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png", height: 50 %>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <%= link_to 'Nos tarifs', nostarifs_path, class: " nav-link" %>
            </li>
            <li class="nav-item">
                <%= link_to 'Notre mission', apropos_path, class: " nav-link" %>
            </li>
            <li class="nav-item">
                <%= link_to 'Contactez-nous', new_contact_path, class: " nav-link" %>
            </li>
            <% if user_signed_in? %>
            <li class="nav-item">
                <%= link_to 'Suivi de vos envois', 'https://packsdenveloppes.aftership.com/', class: " nav-link" %>
            </li>
            <li class="nav-item">
                <%= link_to cart_path(current_user.cart), class: "nav-link" do %>
                <i class="fas fa-shopping-cart"></i>
                <% end %>
            </li>
            <li class="nav-item">
                <%= link_to 'Commander', packs_path, class: " btn btn-cta-nav center-block navbar-wagon-item navbar-wagon-link ml-2 btn-nav-mobile" %>
            </li>
            <li class="nav-item">
                <%= link_to 'Mes commandes', dashboard_path, class:"btn btn-nav center-block navbar-wagon-item navbar-wagon-link mr-3 btn-nav-mobile" %>
            </li>
            <li class="nav-item">
                <%= link_to "Administrateur", orders_path, class: "nav-link" if current_user.admin %>
            </li>
            <li class="nav-item dropdown">
                <%= image_tag "default_avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <%= link_to cart_path(current_user.cart), class: "dropdown-item" do %>
                    <i class="fas fa-shopping-cart"></i> <%= "Mon Panier" %>
                    <% end %>
                    <%= link_to edit_user_registration_path, class: "dropdown-item" do %>
                    <i class="fa fa-cog"></i> <%= t(".settings", default: "Profile") %>
                    <% end %>
                    <%= link_to packs_path, class: "dropdown-item" do %>
                    <i class="fas fa-envelope"></i> Commander
                    <% end %>
                    <%= link_to "Mes commandes", dashboard_path, class: "dropdown-item" %>
                    <%= link_to "Contactez-nous", new_contact_path, class: "dropdown-item" %>
                    <%= link_to "Notre mission", apropos_path, class: "dropdown-item" %>
                    <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
                    <i class="fas fa-sign-out-alt"></i> <%= t(".sign_out", default: "Se deconnecter") %>
                    <% end %>
                </div>
            </li>
            <% else %>
            <%= render 'shared/modal_sign_in' %>
            <li class="nav-item">
                <%= link_to 'Commander', packs_path, class: " btn btn-cta-nav center-block navbar-wagon-item navbar-wagon-link ml-2 btn-nav-mobile" %>
            </li>
            <li class="nav-item">
                <%= link_to 'Inscription', new_user_registration_path, class:"btn btn-nav center-block nav-link" %>
                <% end %>
        </ul>
    </div>
</div>
